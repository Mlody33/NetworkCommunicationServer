<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <center>
      <TableView fx:id="clientsTableView" prefWidth="550.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="identyfierColumn" maxWidth="120.0" minWidth="100.0" prefWidth="100.0" text="Identyfier" />
            <TableColumn fx:id="authorizationColumn" maxWidth="130.0" minWidth="110.0" prefWidth="110.0" text="Authorization" />
            <TableColumn fx:id="signalColumn" maxWidth="120.0" minWidth="90.0" prefWidth="90.0" text="Last signal" />
            <TableColumn fx:id="timeConnectionColumn" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="Update" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" spacing="10.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <HBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                <Button fx:id="connectionBtn" mnemonicParsing="false" onAction="#switchServerConnection" text="Switch to offline" />
                  <Button mnemonicParsing="false" text="No action" />
               </children>
            </HBox>
            <Text fx:id="statusTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="Online" textAlignment="CENTER" wrappingWidth="220.826171875" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
