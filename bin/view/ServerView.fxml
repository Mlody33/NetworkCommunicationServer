<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <center>
      <TableView fx:id="clientsTableView" prefHeight="375.0" prefWidth="441.0">
         <columns>
            <TableColumn fx:id="identyfierColumn" prefWidth="75.0" text="Identyfier" />
            <TableColumn fx:id="timeConnectionColumn" prefWidth="75.0" text="Time connection" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ButtonBar buttonMinWidth="80.0">
              <buttons>
                <Button fx:id="connectionBtn" mnemonicParsing="false" onAction="#switchServerConnection" text="Switch off" />
                  <Button mnemonicParsing="false" text="No action" />
              </buttons>
            </ButtonBar>
            <Text fx:id="statusTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="Online" textAlignment="CENTER" wrappingWidth="220.826171875">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
